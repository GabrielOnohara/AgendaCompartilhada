generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model company {
  id           Int           @id @default(autoincrement())
  createdAt    DateTime      @default(now())
  updatedAt    DateTime
  email        String        @unique(map: "Company_email_key")
  name         String
  phone        String        @unique(map: "Company_phone_key")
  password     String
  isAdmin      Boolean       @default(true)
  contribuitor contribuitor?
}

model contribuitor {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime
  email     String   @unique(map: "Contribuitor_email_key")
  name      String
  phone     String   @unique(map: "Contribuitor_phone_key")
  password  String
  isAdmin   Boolean  @default(false)
  companyId Int?     @unique(map: "Contribuitor_companyId_key")
  company   company? @relation(fields: [companyId], references: [id], map: "Contribuitor_companyId_fkey")
}
